{
  "version": "1.0.0",
  "description": "Claude ↔ Gemini協業 統一品質基準",
  "thresholds": {
    "minimum_overall_score": 0.7,
    "minimum_type_score": 0.8,
    "minimum_lint_score": 0.8,
    "minimum_format_score": 0.9,
    "minimum_security_score": 0.9,
    "minimum_performance_score": 0.7,
    "minimum_test_coverage": 0.5,
    "maximum_error_count": 10,
    "maximum_warning_count": 20
  },
  "weights": {
    "syntax": 0.2,
    "type_check": 0.25,
    "lint": 0.2,
    "format": 0.1,
    "security": 0.15,
    "performance": 0.05,
    "test": 0.05
  },
  "automation": {
    "auto_fix_format": true,
    "auto_fix_simple_types": true,
    "auto_fix_imports": true,
    "auto_run_tests": true,
    "auto_commit_fixes": false
  },
  "claude_specific": {
    "mypy_strict_mode": true,
    "black_line_length": 88,
    "flake8_max_line_length": 88,
    "isort_profile": "black",
    "required_type_annotations": true
  },
  "gemini_specific": {
    "react_loop_required": true,
    "checkpointing_for_complex_tasks": true,
    "multi_modal_validation": true,
    "context_window_optimization": true
  },
  "quality_gates": {
    "pre_commit": {
      "minimum_score": 0.8,
      "required_checks": ["syntax", "type_check", "lint", "format"],
      "block_on_failure": true
    },
    "pre_push": {
      "minimum_score": 0.85,
      "required_checks": ["syntax", "type_check", "lint", "format", "security", "test"],
      "block_on_failure": true
    },
    "production_deployment": {
      "minimum_score": 0.9,
      "required_checks": ["syntax", "type_check", "lint", "format", "security", "performance", "test"],
      "block_on_failure": true
    }
  },
  "error_categories": {
    "critical": {
      "syntax_errors": "構文エラー",
      "import_errors": "インポートエラー",
      "security_vulnerabilities": "セキュリティ脆弱性"
    },
    "major": {
      "type_errors": "型エラー",
      "undefined_variables": "未定義変数",
      "logic_errors": "論理エラー"
    },
    "minor": {
      "style_violations": "スタイル違反",
      "unused_imports": "未使用インポート",
      "format_issues": "フォーマット問題"
    }
  },
  "ai_agent_requirements": {
    "claude": {
      "must_report_before_changes": true,
      "must_use_todo_system": true,
      "must_follow_user_instructions": true,
      "must_use_tmp_directory": true,
      "japanese_communication": true
    },
    "gemini": {
      "must_follow_seven_principles": true,
      "must_use_react_pattern": true,
      "must_use_checkpointing": true,
      "must_validate_multimodal": true,
      "japanese_communication": true
    }
  },
  "integration_standards": {
    "task_handoff": {
      "required_context": ["file_list", "error_types", "complexity_level"],
      "quality_verification": true,
      "cost_tracking": true
    },
    "result_validation": {
      "cross_validation": true,
      "automated_testing": true,
      "manual_review_threshold": 0.7
    }
  }
}
