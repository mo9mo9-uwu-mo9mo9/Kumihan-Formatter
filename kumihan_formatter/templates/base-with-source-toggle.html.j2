            display: block;
        }
        
        .preview-content.hidden {
            display: none;
        }
        
        /* ã‚½ãƒ¼ã‚¹ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ */
        .source-content {
            display: none;
            padding: 0;
        }
        
        .source-content.active {
            display: block;
        }
        
        .source-content pre {
            margin: 0;
            padding: 20px;
            background: #f6f8fa;
            border: none;
            font-family: 'Consolas', 'Monaco', 'Courier New', monospace;
            font-size: 13px;
            line-height: 1.6;
            color: #24292f;
            overflow-x: auto;
            white-space: pre-wrap;
        }
        
        .source-content code {
            background: transparent;
            padding: 0;
            font-size: inherit;
            color: inherit;
        }
        
        /* ã‚·ãƒ³ã‚¿ãƒƒã‚¯ã‚¹ãƒã‚¤ãƒ©ã‚¤ãƒˆ */
        .source-content .keyword {
            color: #d73a49;
            font-weight: bold;
        }
        
        .source-content .marker {
            color: #005cc5;
            font-weight: bold;
        }
        
        .source-content .content-text {
            color: #24292e;
        }
        
        .source-content .comment {
            color: #6a737d;
