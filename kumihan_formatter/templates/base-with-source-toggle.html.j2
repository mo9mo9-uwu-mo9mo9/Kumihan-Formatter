        }
        
        /* ãƒ¬ã‚¹ãƒãƒ³ã‚·ãƒ–å¯¾å¿œ */
        @media (max-width: 768px) {
            body {
                padding: 10px;
            }
            
            .main-container {
                border-radius: 4px;
            }
            
            .tab-btn {
                padding: 10px 12px;
                font-size: 13px;
            }
            
            .file-info {
                padding: 10px 12px;
                font-size: 11px;
            }
            
            .preview-content,
            .source-content pre {
                padding: 15px;
                font-size: 12px;
            }
        }
        
        /* ========== æ—¢å­˜ã®ã‚¹ã‚¿ã‚¤ãƒ«ï¼ˆç°¡ç•¥ç‰ˆï¼‰ ========== */
        
        .container {
            max-width: 100%;
            margin: 0;
            background-color: {% if css_vars.container_background %}{{ css_vars.container_background }}{% else %}white{% endif %};
            padding: 20px;
            border-radius: 5px;
        }

        /* æ®µè½ */
        p {
            margin-bottom: 1.5em;
            text-align: justify;
        }

        /* è¦‹å‡ºã— */
        h1, h2, h3, h4, h5 {
            margin-top: 2em;
