        }

        /* ã‚¤ãƒ³ãƒ©ã‚¤ãƒ³è¦ç´  */
        strong {
            font-weight: bold;
            color: #000;
        }

        em {
            font-style: italic;
        }

        /* æ ç·š */
        .box {
            border: 2px solid #333;
