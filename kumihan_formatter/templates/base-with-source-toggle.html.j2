        }

        h3 {
            font-size: 1.3em;
        }

        h4 {
            font-size: 1.1em;
        }

        h5 {
            font-size: 1em;
        }

        /* ãƒªã‚¹ãƒˆ */
        ul, ol {
            margin-bottom: 1.5em;
            padding-left: 2em;
            list-style-position: outside;
        }

        li {
            margin-bottom: 0.5em;
            position: relative;
        }

        /* ã‚¤ãƒ³ãƒ©ã‚¤ãƒ³è¦ç´  */
        strong {
            font-weight: bold;
            color: #000;
        }

        em {
            font-style: italic;
        }

        /* æ ç·š */
        .box {
            border: 2px solid #333;
            padding: 1em;
            margin: 1em 0;
            border-radius: 5px;
            background-color: #fafafa;
        }

        /* ãƒã‚¤ãƒ©ã‚¤ãƒˆ */
        .highlight {
            padding: 1em;
