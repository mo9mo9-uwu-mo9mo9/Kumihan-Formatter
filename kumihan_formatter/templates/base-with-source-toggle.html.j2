        }
    </style>
</head>
<body>
    <!-- ãƒ¡ã‚¤ãƒ³ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã‚¨ãƒªã‚¢ -->
    <div class="main-container">
        <!-- GitHubé¢¨ãƒˆã‚°ãƒ«ãƒ˜ãƒƒãƒ€ãƒ¼ -->
        <div class="toggle-header">
            <div class="toggle-tabs">
                <button class="tab-btn active" id="preview-tab" onclick="showPreview()">
                    ğŸ¨ ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼
                </button>
                <button class="tab-btn" id="source-tab" onclick="showSource()">
                    ğŸ“ è¨˜æ³•
                </button>
            </div>
            <div class="file-info">
                {{ source_filename or "sample.txt" }}
            </div>
        </div>
        
        <!-- ã‚³ãƒ³ãƒ†ãƒ³ãƒ„è¡¨ç¤ºã‚¨ãƒªã‚¢ -->
        <div class="content-display">
            <!-- ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼è¡¨ç¤º -->
            <div class="preview-content active" id="preview-content">
                {{ body_content | safe }}
            </div>
            
            <!-- ã‚½ãƒ¼ã‚¹è¡¨ç¤º -->
            <div class="source-content hidden" id="source-content">
                <pre><code>{{ source_text | e }}</code></pre>
            </div>
        </div>
    </div>
    
    <script>
        // GitHubé¢¨ã‚¿ãƒ–åˆ‡ã‚Šæ›¿ãˆæ©Ÿèƒ½
        function showPreview() {
            // ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼ã‚’è¡¨ç¤ºã€ã‚½ãƒ¼ã‚¹ã‚’éè¡¨ç¤º
            document.getElementById('preview-content').classList.remove('hidden');
            document.getElementById('source-content').classList.remove('active');
            
            // ã‚¿ãƒ–ã®çŠ¶æ…‹ã‚’åˆ‡ã‚Šæ›¿ãˆ
            document.getElementById('preview-tab').classList.add('active');
            document.getElementById('source-tab').classList.remove('active');
        }
        
        function showSource() {
            // ã‚½ãƒ¼ã‚¹ã‚’è¡¨ç¤ºã€ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼ã‚’éè¡¨ç¤º
            document.getElementById('preview-content').classList.add('hidden');
            document.getElementById('source-content').classList.add('active');
            
            // ã‚¿ãƒ–ã®çŠ¶æ…‹ã‚’åˆ‡ã‚Šæ›¿ãˆ
            document.getElementById('preview-tab').classList.remove('active');
            document.getElementById('source-tab').classList.add('active');
        }
        
        // ã‚·ãƒ³ã‚¿ãƒƒã‚¯ã‚¹ãƒã‚¤ãƒ©ã‚¤ãƒˆï¼ˆã‚·ãƒ³ãƒ—ãƒ«ç‰ˆï¼‰
        function applySyntaxHighlighting() {
            const sourceContent = document.querySelector('#source-content code');
            if (!sourceContent) return;
            
            let text = sourceContent.textContent;
            
            // ãƒ–ãƒ­ãƒƒã‚¯ãƒãƒ¼ã‚«ãƒ¼ã®ãƒã‚¤ãƒ©ã‚¤ãƒˆ
            text = text.replace(/^;;;(.*)$/gm, '<span style="color: #005cc5; font-weight: bold;">;;;$1</span>');
            
            // ãƒªã‚¹ãƒˆé …ç›®ã®ãƒã‚¤ãƒ©ã‚¤ãƒˆ  
            text = text.replace(/^- (.*)$/gm, '<span style="color: #005cc5; font-weight: bold;">-</span> $1');
            
            sourceContent.innerHTML = text;
        }
        
        // ãƒšãƒ¼ã‚¸èª­ã¿è¾¼ã¿æ™‚ã®åˆæœŸåŒ–
        document.addEventListener('DOMContentLoaded', function() {
            applySyntaxHighlighting();
        });
    </script>
</body>
</html>