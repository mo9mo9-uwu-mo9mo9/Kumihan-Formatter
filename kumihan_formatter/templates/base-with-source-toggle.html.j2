    <script>
        // GitHubé¢¨ã‚¿ãƒ–åˆ‡ã‚Šæ›¿ãˆæ©Ÿèƒ½
        function showPreview() {
            // å…¨ã¦ã®ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã‚’éš ã™
            hideAllContent();
            
            // ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼ã‚’è¡¨ç¤º
            document.getElementById('preview-content').classList.remove('hidden');
            
            // ãƒœã‚¿ãƒ³çŠ¶æ…‹ã‚’ãƒªã‚»ãƒƒãƒˆ
            resetButtonStates();
            document.getElementById('preview-btn').classList.add('active');
        }
        
        function showSource() {
            // å…¨ã¦ã®ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã‚’éš ã™
            hideAllContent();
            
            // ã‚½ãƒ¼ã‚¹ã‚’è¡¨ç¤º
            document.getElementById('source-content').classList.add('active');
            
            // ãƒœã‚¿ãƒ³çŠ¶æ…‹ã‚’ãƒªã‚»ãƒƒãƒˆ
            resetButtonStates();
            document.getElementById('source-btn').classList.add('active');
        }
        
        function showHTML() {
            // å…¨ã¦ã®ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã‚’éš ã™
            hideAllContent();
            
            // HTMLã‚’è¡¨ç¤º
            document.getElementById('html-content').classList.add('active');
            
            // ãƒœã‚¿ãƒ³çŠ¶æ…‹ã‚’ãƒªã‚»ãƒƒãƒˆ
            resetButtonStates();
            document.getElementById('html-btn').classList.add('active');
            
            // HTMLã‚·ãƒ³ã‚¿ãƒƒã‚¯ã‚¹ãƒã‚¤ãƒ©ã‚¤ãƒˆã‚’é©ç”¨
            applyHTMLSyntaxHighlighting();
        }
        
        // ãƒ˜ãƒ«ãƒ‘ãƒ¼é–¢æ•°ï¼šå…¨ã¦ã®ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã‚’éš ã™
        function hideAllContent() {
            document.getElementById('preview-content').classList.add('hidden');
            document.getElementById('source-content').classList.remove('active');
            document.getElementById('html-content').classList.remove('active');
        }
        
        // ãƒ˜ãƒ«ãƒ‘ãƒ¼é–¢æ•°ï¼šå…¨ã¦ã®ãƒœã‚¿ãƒ³çŠ¶æ…‹ã‚’ãƒªã‚»ãƒƒãƒˆ
        function resetButtonStates() {
            document.getElementById('preview-btn').classList.remove('active');
            document.getElementById('source-btn').classList.remove('active');
            document.getElementById('html-btn').classList.remove('active');
        }
        
        // ã‚·ãƒ³ã‚¿ãƒƒã‚¯ã‚¹ãƒã‚¤ãƒ©ã‚¤ãƒˆï¼ˆã‚·ãƒ³ãƒ—ãƒ«ç‰ˆï¼‰
        function applySyntaxHighlighting() {
            const sourceContent = document.querySelector('#source-content code');
            if (!sourceContent) return;
            
            let text = sourceContent.textContent;
            
            // ãƒ–ãƒ­ãƒƒã‚¯ãƒãƒ¼ã‚«ãƒ¼ã®ãƒã‚¤ãƒ©ã‚¤ãƒˆ
            text = text.replace(/^;;;(.*)$/gm, '<span style="color: #005cc5; font-weight: bold;">;;;$1</span>');
            
            // ãƒªã‚¹ãƒˆé …ç›®ã®ãƒã‚¤ãƒ©ã‚¤ãƒˆ  
            text = text.replace(/^- (.*)$/gm, '<span style="color: #005cc5; font-weight: bold;">-</span> $1');
            
            sourceContent.innerHTML = text;
        }
        
        // HTMLã‚·ãƒ³ã‚¿ãƒƒã‚¯ã‚¹ãƒã‚¤ãƒ©ã‚¤ãƒˆ
        function applyHTMLSyntaxHighlighting() {
            const htmlContent = document.querySelector('#html-code');
            if (!htmlContent) return;
            
            // æ—¢ã«ãƒã‚¤ãƒ©ã‚¤ãƒˆæ¸ˆã¿ã®å ´åˆã¯ã‚¹ã‚­ãƒƒãƒ—
            if (htmlContent.getAttribute('data-highlighted') === 'true') {
                return;
            }
            
            let text = htmlContent.textContent;
            
            // HTMLã‚¿ã‚°ã®ãƒã‚¤ãƒ©ã‚¤ãƒˆï¼ˆã‚¨ã‚¹ã‚±ãƒ¼ãƒ—ã•ã‚ŒãŸHTMLç”¨ï¼‰
            text = text.replace(/&lt;(\/?[\w\d-]+)([^&]*?)&gt;/g, function(match, tagName, attributes) {
                const highlightedTag = `<span style="color: #d73a49; font-weight: bold;">&lt;${tagName}</span>`;
                const highlightedAttrs = attributes.replace(/(\w+)=&quot;([^&]*?)&quot;/g, 
                    '<span style="color: #005cc5;">$1</span>=<span style="color: #032f62;">&quot;$2&quot;</span>');
                return highlightedTag + highlightedAttrs + '<span style="color: #d73a49; font-weight: bold;">&gt;</span>';
            });
            
            // ãƒ†ã‚­ã‚¹ãƒˆã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã‚’ãƒã‚¤ãƒ©ã‚¤ãƒˆ
            text = text.replace(/&gt;([^&<]+?)&lt;/g, '&gt;<span style="color: #24292e;">$1</span>&lt;');
            
            htmlContent.innerHTML = text;
            htmlContent.setAttribute('data-highlighted', 'true');
        }
        
        
        // ç›®æ¬¡æ©Ÿèƒ½ï¼ˆTOCï¼‰
        function setupTOC() {
            const tocToggle = document.querySelector('.toc-toggle');
            const tocSidebar = document.querySelector('.toc-sidebar');
            
            if (!tocToggle || !tocSidebar) return;
            
            // localStorage ã‹ã‚‰çŠ¶æ…‹ã‚’å¾©å…ƒ
            const tocState = localStorage.getItem('toc-collapsed');
            if (tocState === 'true') {
                tocSidebar.classList.add('collapsed');
                tocToggle.textContent = 'â–¶';
            }
            
            tocToggle.addEventListener('click', function() {
                tocSidebar.classList.toggle('collapsed');
                const isCollapsed = tocSidebar.classList.contains('collapsed');
                
                // çŠ¶æ…‹ã‚’ä¿å­˜
                localStorage.setItem('toc-collapsed', isCollapsed);
                
                // ãƒœã‚¿ãƒ³ãƒ†ã‚­ã‚¹ãƒˆã‚’æ›´æ–°
                tocToggle.textContent = isCollapsed ? 'â–¶' : 'ç›®æ¬¡';
            });
            
            // ç¾åœ¨ä½ç½®ã®ãƒã‚¤ãƒ©ã‚¤ãƒˆ
            const headings = document.querySelectorAll('h1[id], h2[id], h3[id], h4[id], h5[id]');
            const tocLinks = document.querySelectorAll('.toc-list a');
            
            function updateActiveLink() {
                let currentHeading = null;
                
                // ç¾åœ¨è¡¨ç¤ºã•ã‚Œã¦ã„ã‚‹æœ€ä¸Šéƒ¨ã®è¦‹å‡ºã—ã‚’è¦‹ã¤ã‘ã‚‹
                for (const heading of headings) {
                    const rect = heading.getBoundingClientRect();
                    if (rect.top <= 100) {
                        currentHeading = heading;
                    } else {
                        break;
                    }
                }
                
                // ã‚¢ã‚¯ãƒ†ã‚£ãƒ–ãƒªãƒ³ã‚¯ã‚’æ›´æ–°
                tocLinks.forEach(link => {
                    link.classList.remove('active');
                    if (currentHeading && link.getAttribute('href') === '#' + currentHeading.id) {
                        link.classList.add('active');
                    }
                });
            }
            
            // ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«ã‚¤ãƒ™ãƒ³ãƒˆã§ã‚¢ã‚¯ãƒ†ã‚£ãƒ–ãƒªãƒ³ã‚¯ã‚’æ›´æ–°
            let scrollTimer;
            window.addEventListener('scroll', function() {
                clearTimeout(scrollTimer);
                scrollTimer = setTimeout(updateActiveLink, 50);
            });
            
            // åˆæœŸçŠ¶æ…‹ã‚’è¨­å®š
            updateActiveLink();
        }
        
