    {% if has_toc %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // ãƒˆã‚°ãƒ«ãƒœã‚¿ãƒ³ã®æ©Ÿèƒ½
            const tocToggle = document.querySelector('.toc-toggle');
            const tocSidebar = document.querySelector('.toc-sidebar');
            
            // localStorage ã‹ã‚‰çŠ¶æ…‹ã‚’å¾©å…ƒ
            const tocState = localStorage.getItem('docs-toc-collapsed');
            if (tocState === 'true') {
                tocSidebar.classList.add('collapsed');
                tocToggle.textContent = 'â–¶';
            }
            
            tocToggle.addEventListener('click', function() {
                tocSidebar.classList.toggle('collapsed');
                const isCollapsed = tocSidebar.classList.contains('collapsed');
                
                // çŠ¶æ…‹ã‚’ä¿å­˜
                localStorage.setItem('docs-toc-collapsed', isCollapsed);
                
                // ãƒœã‚¿ãƒ³ãƒ†ã‚­ã‚¹ãƒˆã‚’æ›´æ–°
                tocToggle.textContent = isCollapsed ? 'â–¶' : 'ç›®æ¬¡';
            });
            
            // ç¾åœ¨ä½ç½®ã®ãƒã‚¤ãƒ©ã‚¤ãƒˆ
            const headings = document.querySelectorAll('h1[id], h2[id], h3[id], h4[id], h5[id]');
            const tocLinks = document.querySelectorAll('.toc-list a');
            
            function updateActiveLink() {
                let currentHeading = null;
                
                // ç¾åœ¨è¡¨ç¤ºã•ã‚Œã¦ã„ã‚‹æœ€ä¸Šéƒ¨ã®è¦‹å‡ºã—ã‚’è¦‹ã¤ã‘ã‚‹
                for (const heading of headings) {
                    const rect = heading.getBoundingClientRect();
                    if (rect.top <= 150) {
                        currentHeading = heading;
                    } else {
                        break;
                    }
                }
                
                // ã‚¢ã‚¯ãƒ†ã‚£ãƒ–ãƒªãƒ³ã‚¯ã‚’æ›´æ–°
                tocLinks.forEach(link => {
                    link.classList.remove('active');
                    if (currentHeading && link.getAttribute('href') === '#' + currentHeading.id) {
                        link.classList.add('active');
                    }
                });
            }
            
            // ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«ã‚¤ãƒ™ãƒ³ãƒˆã§ã‚¢ã‚¯ãƒ†ã‚£ãƒ–ãƒªãƒ³ã‚¯ã‚’æ›´æ–°
            let scrollTimer;
            window.addEventListener('scroll', function() {
                clearTimeout(scrollTimer);
                scrollTimer = setTimeout(updateActiveLink, 50);
            });
            
            // åˆæœŸçŠ¶æ…‹ã‚’è¨­å®š
            updateActiveLink();
        });
    </script>
    {% endif %}
</head>
