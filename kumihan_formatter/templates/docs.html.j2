        }

        /* æŠ˜ã‚ŠãŸãŸã¿ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ */
        details > *:not(summary) {
            padding: 1.5em 1.2em;
            background-color: #ffffff;
            line-height: 1.7;
        }
        
        /* æŠ˜ã‚ŠãŸãŸã¿ãƒ–ãƒ­ãƒƒã‚¯å†…ã®æ®µè½ã®ãƒãƒ¼ã‚¸ãƒ³ã‚’èª¿æ•´ */
        details > p {
            margin-bottom: 1em;
        }
        
        details > p:last-child {
            margin-bottom: 0;
        }

        /* æŠ˜ã‚ŠãŸãŸã¿ãƒ–ãƒ­ãƒƒã‚¯å†…ã®æ”¹è¡Œã‚’é©åˆ‡ã«è¡¨ç¤º */
        details br {
            display: block;
