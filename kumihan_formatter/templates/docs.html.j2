        }

        /* ãƒã‚¤ãƒ©ã‚¤ãƒˆï¼ˆãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆç”¨ã‚¹ã‚¿ã‚¤ãƒ«ï¼‰ */
        .highlight {
            padding: 1.2em;
            margin: 1.5em 0;
            border-radius: 8px;
            border-left: 5px solid #ffa726;
        }

        /* ç‰¹åˆ¥ãªãƒã‚¤ãƒ©ã‚¤ãƒˆè‰² */
        .highlight[style*="background-color:#d4edda"] {
            border-left-color: #28a745;
        }

        .highlight[style*="background-color:#f8d7da"] {
            border-left-color: #dc3545;
        }

        .highlight[style*="background-color:#fff3cd"] {
            border-left-color: #ffc107;
        }

        .highlight[style*="background-color:#e3f2fd"] {
            border-left-color: #2196f3;
        }

        /* ãƒã‚¹ãƒˆã—ãŸãƒ–ãƒ­ãƒƒã‚¯è¦ç´ ã®èª¿æ•´ */
        .box .highlight {
            margin: 0.8em 0;
        }

        .highlight .box {
            margin: 0.8em 0;
        }

        /* ãƒªã‚¹ãƒˆé …ç›®å†…ã®ãƒ–ãƒ­ãƒƒã‚¯è¦ç´  */
        li .box {
            margin: 0.8em -1.5em 0.8em -1.5em;
            padding-left: 1.8em;
            padding-right: 1.2em;
        }

        li .highlight {
            margin: 0.8em -1.5em 0.8em -1.5em;
            padding-left: 1.8em;
            padding-right: 1.2em;
        }

        /* ãƒªã‚¹ãƒˆé …ç›®å†…ã®è¦‹å‡ºã— */
        li h1, li h2, li h3, li h4, li h5 {
            margin: 0.5em 0;
            padding: 0;
        }

        li h1 {
            border-bottom: 2px solid #4a90e2;
            padding-bottom: 0.2em;
        }

        li h2 {
            border-bottom: 1px solid #5a9bd4;
            padding-bottom: 0.1em;
        }

        /* ãƒ•ãƒƒã‚¿ãƒ¼ï¼ˆãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆç”¨ï¼‰ */
        .doc-footer {
            margin-top: 3em;
            padding-top: 2em;
            border-top: 2px solid #eee;
            text-align: center;
            color: #666;
            font-size: 0.9em;
        }

        .doc-footer .logo {
            font-weight: bold;
            color: #4a90e2;
            font-size: 1.1em;
        }

        {% if has_toc %}
        /* ç›®æ¬¡ã‚¹ã‚¿ã‚¤ãƒ«ï¼ˆãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆç”¨ï¼‰ */
        body {
            padding: 0;
        }
        
        .layout-wrapper {
            display: grid;
            grid-template-columns: 280px 1fr;
            max-width: 1600px;
            margin: 0 auto;
            gap: 20px;
            padding: 20px;
        }
        
        .toc-sidebar {
            position: sticky;
            top: 20px;
            height: fit-content;
            max-height: calc(100vh - 40px);
            overflow-y: auto;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.2);
            border-radius: 10px;
        }
        
        .toc-sidebar.collapsed .toc-content {
            display: none;
        }
        
        .toc-toggle {
            display: block;
            width: 100%;
            padding: 12px;
            background-color: rgba(255,255,255,0.2);
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
            color: white;
            font-weight: bold;
            text-align: center;
            margin-bottom: 15px;
            transition: background-color 0.3s;
        }
        
        .toc-toggle:hover {
            background-color: rgba(255,255,255,0.3);
        }
        
        .toc-content h3 {
            margin-top: 0;
            margin-bottom: 15px;
            font-size: 18px;
            border-bottom: 2px solid rgba(255,255,255,0.3);
            padding-bottom: 8px;
            color: white;
        }
        
        .toc-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .toc-list ul {
            list-style: none;
            padding-left: 20px;
            margin: 5px 0;
        }
        
        .toc-list li {
            margin: 5px 0;
        }
        
        .toc-list a {
            color: rgba(255,255,255,0.9);
            text-decoration: none;
            display: block;
            padding: 8px 12px;
            border-radius: 6px;
            transition: all 0.3s;
            font-size: 14px;
        }
        
        .toc-list a:hover {
            background-color: rgba(255,255,255,0.2);
            color: white;
        }
        
        .toc-list a.active {
            background-color: rgba(255,255,255,0.3);
            color: white;
            font-weight: bold;
        }
        
        /* ã‚¹ãƒ ãƒ¼ã‚¹ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ« */
        html {
            scroll-behavior: smooth;
        }
        {% endif %}

        /* ãƒ¬ã‚¹ãƒãƒ³ã‚·ãƒ–å¯¾å¿œ */
        @media (max-width: 1200px) {
            {% if has_toc %}
            .layout-wrapper {
                grid-template-columns: 250px 1fr;
            }
            {% endif %}
        }

        @media (max-width: 768px) {
            body {
                padding: 10px;
            }

            .container {
                padding: 20px;
            }

            h1 {
                font-size: 1.8em;
            }

            h2 {
                font-size: 1.4em;
            }

            {% if has_toc %}
            .layout-wrapper {
                display: block;
            }
            
            .toc-sidebar {
                position: relative;
                margin-bottom: 20px;
                max-height: none;
            }
            {% endif %}
        }

        /* å°åˆ·ç”¨ã‚¹ã‚¿ã‚¤ãƒ« */
        @media print {
            body {
                background: white;
                padding: 0;
            }

            .container {
                box-shadow: none;
                padding: 20px;
                max-width: 100%;
            }

            .doc-header {
                border-bottom: 2px solid #333;
            }

            h1, h2 {
                page-break-after: avoid;
                color: #333 !important;
                border-color: #333 !important;
            }

            p, ul {
                page-break-inside: avoid;
            }

            {% if has_toc %}
            .toc-sidebar {
                display: none;
            }
            
            .layout-wrapper {
                display: block;
            }
            {% endif %}

            .doc-footer {
                border-top: 1px solid #333;
            }
        }
    </style>
    {% if has_toc %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // ãƒˆã‚°ãƒ«ãƒœã‚¿ãƒ³ã®æ©Ÿèƒ½
            const tocToggle = document.querySelector('.toc-toggle');
            const tocSidebar = document.querySelector('.toc-sidebar');
            
            // localStorage ã‹ã‚‰çŠ¶æ…‹ã‚’å¾©å…ƒ
            const tocState = localStorage.getItem('docs-toc-collapsed');
            if (tocState === 'true') {
                tocSidebar.classList.add('collapsed');
                tocToggle.textContent = 'â–¶';
            }
            
            tocToggle.addEventListener('click', function() {
                tocSidebar.classList.toggle('collapsed');
                const isCollapsed = tocSidebar.classList.contains('collapsed');
                
                // çŠ¶æ…‹ã‚’ä¿å­˜
                localStorage.setItem('docs-toc-collapsed', isCollapsed);
                
                // ãƒœã‚¿ãƒ³ãƒ†ã‚­ã‚¹ãƒˆã‚’æ›´æ–°
                tocToggle.textContent = isCollapsed ? 'â–¶' : 'ç›®æ¬¡';
            });
            
            // ç¾åœ¨ä½ç½®ã®ãƒã‚¤ãƒ©ã‚¤ãƒˆ
            const headings = document.querySelectorAll('h1[id], h2[id], h3[id], h4[id], h5[id]');
            const tocLinks = document.querySelectorAll('.toc-list a');
            
            function updateActiveLink() {
                let currentHeading = null;
                
                // ç¾åœ¨è¡¨ç¤ºã•ã‚Œã¦ã„ã‚‹æœ€ä¸Šéƒ¨ã®è¦‹å‡ºã—ã‚’è¦‹ã¤ã‘ã‚‹
                for (const heading of headings) {
                    const rect = heading.getBoundingClientRect();
                    if (rect.top <= 150) {
                        currentHeading = heading;
                    } else {
                        break;
                    }
                }
                
                // ã‚¢ã‚¯ãƒ†ã‚£ãƒ–ãƒªãƒ³ã‚¯ã‚’æ›´æ–°
                tocLinks.forEach(link => {
                    link.classList.remove('active');
                    if (currentHeading && link.getAttribute('href') === '#' + currentHeading.id) {
                        link.classList.add('active');
                    }
                });
            }
            
            // ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«ã‚¤ãƒ™ãƒ³ãƒˆã§ã‚¢ã‚¯ãƒ†ã‚£ãƒ–ãƒªãƒ³ã‚¯ã‚’æ›´æ–°
            let scrollTimer;
            window.addEventListener('scroll', function() {
                clearTimeout(scrollTimer);
                scrollTimer = setTimeout(updateActiveLink, 50);
            });
            
            // åˆæœŸçŠ¶æ…‹ã‚’è¨­å®š
            updateActiveLink();
        });
    </script>
    {% endif %}
</head>
