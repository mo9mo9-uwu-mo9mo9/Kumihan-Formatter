{
  "scan_patterns": [
    "**/*.py",
    "**/*.pyw"
  ],
  "exclude_patterns": [
    "tests/",
    "venv/",
    ".venv/",
    "__pycache__/",
    ".git/",
    "build/",
    "dist/",
    ".tox/",
    "node_modules/",
    ".mypy_cache/",
    ".pytest_cache/"
  ],
  "memory_management": {
    "max_findings": 1000,
    "gc_interval": 100,
    "enable_memory_monitoring": true,
    "memory_pressure_threshold": 0.8,
    "auto_cleanup_threshold": 2000
  },
  "error_handling": {
    "exposure_level": "internal",
    "log_detailed_errors": true,
    "sanitize_error_messages": true,
    "error_aggregation_window": 300,
    "max_errors_per_file": 5
  },
  "performance": {
    "enable_parallel_scanning": true,
    "max_workers": "auto",
    "timeout_per_file": 30,
    "batch_size": 50,
    "enable_ast_caching": true,
    "memory_limit_mb": 500
  },
  "vulnerability_detection": {
    "confidence_thresholds": {
      "critical": 0.9,
      "high": 0.7,
      "medium": 0.5,
      "low": 0.3
    },
    "pattern_categories": {
      "sql_injection": {
        "enabled": true,
        "severity_weight": 1.0
      },
      "xss": {
        "enabled": true,
        "severity_weight": 0.8
      },
      "platform_compatibility": {
        "enabled": true,
        "severity_weight": 0.6
      },
      "dependency_issues": {
        "enabled": true,
        "severity_weight": 0.7
      }
    }
  },
  "reporting": {
    "enable_detailed_reports": true,
    "report_format": "json",
    "include_code_snippets": true,
    "max_snippet_length": 200,
    "group_by_severity": true,
    "deduplicate_findings": true
  }
}