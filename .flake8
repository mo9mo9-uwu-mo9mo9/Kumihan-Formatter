[flake8]
# AI開発に適した設定 - Issue #767対応
max-line-length = 100

# 除外ディレクトリ
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .coverage,
    .venv*,
    venv*,
    env,
    .env,
    dist,
    build,
    *.egg-info,
    .test_backups,
    .test_backups/**,
    .gemini_history,
    .gemini_history/**

# AI開発で無視する低優先度エラー
ignore = E203,W503,E226,E704

# 重要なエラーのみ検出
select = E,W,F,C

# ファイル別設定
per-file-ignores =
    __init__.py:F401,F403
    test_*.py:F401,F811,E501
    tests/*.py:F401,F811,E501
    # 開発ツール・一時ファイルのE501エラーは許可
    scripts/*.py:E501
    tools/*.py:E501
    tmp/*.py:E501

# その他の設定
max-complexity = 15
statistics = True
count = True
