{
  "regression_thresholds": {
    "execution_time": 0.15,
    "memory_usage": 0.20,
    "cpu_usage": 0.25,
    "throughput": -0.10
  },
  "alert_thresholds": {
    "coverage_drop": 5.0,
    "complexity_increase": 3.0,
    "test_failure": 1,
    "quality_score_drop": 10.0
  },
  "file_upload": {
    "max_file_size": 5242880,
    "allowed_mime_types": [
      "image/jpeg",
      "image/png",
      "image/gif",
      "application/pdf",
      "text/plain",
      "text/csv"
    ]
  },
  "license_compatibility": {
    "MIT": ["MIT", "BSD-2-Clause", "BSD-3-Clause", "Apache-2.0", "ISC"],
    "Apache-2.0": ["Apache-2.0", "MIT", "BSD-2-Clause", "BSD-3-Clause"],
    "GPL-3.0": ["GPL-3.0", "GPL-2.0", "LGPL-3.0"],
    "BSD-3-Clause": ["BSD-3-Clause", "BSD-2-Clause", "MIT", "Apache-2.0"],
    "ISC": ["ISC", "MIT", "BSD-2-Clause", "BSD-3-Clause"]
  },
  "problematic_licenses": [
    "GPL-2.0",
    "GPL-3.0",
    "AGPL-3.0",
    "Commons Clause",
    "SSPL-1.0"
  ],
  "known_vulnerable_packages": {
    "pillow": {
      "<8.3.2": "CVE-2021-34552"
    },
    "requests": {
      "<2.20.0": "CVE-2018-18074"
    },
    "pyyaml": {
      "<5.4": "CVE-2020-14343"
    },
    "jinja2": {
      "<2.11.3": "CVE-2020-28493"
    }
  },
  "platform_specific": {
    "exclude_patterns": [
      "tests/", "venv/", ".venv/", "__pycache__/",
      ".git/", "build/", "dist/", ".tox/", "node_modules/",
      "static/", "assets/"
    ],
    "required_validations": {
      "file_upload": [
        "File extension validation",
        "MIME type validation",
        "File size check",
        "Secure filename function"
      ]
    }
  },
  "risk_scoring": {
    "critical_threshold": 9.0,
    "high_threshold": 7.0,
    "medium_threshold": 4.0,
    "low_threshold": 2.0
  },
  "monitoring": {
    "quality_check_interval": 5,
    "vscode_update_interval": 2,
    "alert_cooldown": 30,
    "snapshot_retention_days": 7,
    "benchmark_alpha": 0.2,
    "memory_leak_threshold": 1048576,
    "coverage_target": {
      "critical_tier": 80,
      "important_tier": 60,
      "supportive_tier": 40
    }
  }
}